@model KobeTown.Models.Products

@{
	ViewBag.Title = "Chi tiết sản phẩm";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
	* {
		font-size: 100%;
	}
	.row .btn {
		background-color: #9b6c16; /* Màu nền của button */
		color: #fff; /* Màu chữ trên button */
		border: none; /* Loại bỏ viền của button */
		padding: 8px 16px; /* Kích thước padding của button */
		transition: background-color 0.3s; /* Hiệu ứng chuyển đổi màu nền */
		border-radius: 0;
	}

		.row .btn:hover {
			background-color: #c4773b; /* Màu nền khi hover */
			color: #fff; /* Màu chữ khi hover */
		}

	.row .btn-alt {
		background-color: #fff; /* Màu nền thay đổi của button */
		color: #634000; /* Màu chữ thay đổi của button */
		border: 1px solid #634000; /* Viền của button */
	}

		.row .btn-alt:hover {
			background-color: #c4773b; /* Màu nền khi hover */
			color: #fff; /* Màu chữ khi hover */
		}

	.card-body {
		padding: 0;
		background-color: #E6DDC4;
	}

	.card-footer {
		object-fit: fill;
		max-width: contain;
		width: 100%;
		background-color: #E6DDC4;
		padding: 0;
	}

	.card-title {
		padding: var(--bs-card-cap-padding-y) var(--bs-card-cap-padding-x);
	}

	.card-text {
		padding: var(--bs-card-cap-padding-y) var(--bs-card-cap-padding-x);
	}

	.row {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
	}

	.card {
		position: relative;
		transition: transform 0.3s;
		height: fit-content;
	}

		.card:hover {
			transform: scale(1.05);
			z-index: 1;
			box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
		}

	.container {
		padding-left: 2.75%;
		padding-right: 2.75%;
	}

	.card-title,
	.card-text {
		pointer-events: none;
		color: #634000;
	}

	.title {
		-webkit-animation: fade-in-fwd 0.6s cubic-bezier(0.390, 0.575, 0.565, 1.000) both;
		animation: fade-in-fwd 0.6s cubic-bezier(0.390, 0.575, 0.565, 1.000) both;
	}
	.row {
		padding-top:2%;
	}
	.titleDetail {
		padding: 1%;
		max-width: fit-content;
		background-color: #634000;
		color: #fff;
	}
	.table {
		font-size:larger;
	}
</style>
<div class="row">
	<div class="breadcrumb">
		<ul class="breadcrumb-list">
			<li class="breadcrumb-item"><a href="https://localhost:44398">Trang chủ</a></li>
			<li class="breadcrumb-item"><a href="/Products" ;">Danh mục sản phẩm</a></li>
			<li class="breadcrumb-item active" ><a href=""> @Model.Name</a></li>
		</ul>
	</div>
	<div class="col-md-4">
		<img src="~/Content/@Model.Category/@Model.Image" class="img-fluid" alt="@Model.Name">
	</div>
	<div class="col-md-8">
		<div style="background-color: #E6DDC4;">
			<h2 class="titleDetail">@Model.Name</h2>
		</div>
		<table class="table table-bordered">
			<tr>
				<th>Danh mục</th>
				<td>@Model.Category</td>
			</tr>
			<tr>
				<th>Giá</th>
				<td>@Model.Price VNĐ</td>
			</tr>
			<tr>
				<th>Trạng thái</th>
				<td>@Model.Status</td>
			</tr>
			<tr>
				<th>Mô tả</th>
				<td>@Model.Description</td>
			</tr>
		</table>
		<div class="card-footer text-right ">
			<a class="btn col text-center" style="border-right: 1px solid #E6DDC4" href="/ShoppingCart/BuyNow/@Model.Id">Mua ngay</a>
			@Html.ActionLink("Thêm vào giỏ hàng", "AddToCart", "ShoppingCart", new { id = Model.Id }, new
			{
		   @class = "btn btn-info btn-sm"
	   })
		</div>
	</div>
</div>