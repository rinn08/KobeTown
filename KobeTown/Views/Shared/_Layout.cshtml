						<div class="d-flex align-items-center">
							<div class="form-group mr-2">
								<input class="form-control" type="text" name="searchString" placeholder="Searchhh..." />
							</div>
							<button class="btn btn-outline-success" type="submit">Search</button>
						</div>
					</form>

					@*<div class="partial ml-2" style="margin-left:20px;">
							<a href="/Account/Register" style="color: #634000">Register</a>
							<a href="/Account/Login" style="color: #634000">Log in</a>
						</div>*@
					<div class="partial ml-2" style="margin-left:20px;">@Html.Partial("_LoginPartial")</div>
				</div>

			</div>
		</div>
	</nav>
	<nav style="position:relative; top:0px; display:block; font-weight:100; height:0; overflow:hidden;" class="navbar navbar-expand-lg">
		@*<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>*@
	</nav>
	<br />
	<div class="container body-content">

		@RenderBody()
		<hr />

	</div>
