<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="https://getbootstrap.com/docs/5.2/assets/css/docs.css" rel="stylesheet">
	<title>@ViewBag.Title - KobeTown</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
	<style>
		.dropbtn {
			background-color: #E6DDC4;
			color: #634000;
			font-size: 140%;
			border: 0px;
			text-decoration-style: solid;
			display: inline-block;
			height: 100%;
			;
		}

			.dropbtn:hover {
				display:block;
				position:relative;
			}

		.dropdown {
			position: relative;
			display: block;
			height:100%;

		}

		.dropdown-content {
			display: block;
			position: absolute;
			background-color: #E6DDC4;
			min-width: 150%;
			box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
			z-index: 1;
			text-align: center;
			list-style-type:none;
			padding-left:0;
		}

			.dropdown-content a {
				color: #634000;
				position:relative;
				padding: 12px 16px;
				text-decoration: none;
				display: block;
				width:100%;
			}

				.dropdown-content a:hover {
					background-color: #ddd;
				}

		.dropdown:hover .dropdown-content {
			display: block;
		}

		.dropdown:hover .dropbtn {
			background-color: #E6DDC4;
		}

		.image {
			background-color: #E6DDC4;
		}

		.container-fluid {
			background-color: #E6DDC4;
		}
		.nav {
			padding:0;
		}

		#navbar {
			background-color: #E6DDC4;
			border-radius: 0;
			position: fixed;
			z-index: 99999;
			width:100%;
			box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
		}

		.logo {
			background-color: #E6DDC4;
			color: #634000;
			text-decoration-style: solid;
		}

		.nav-item {
			line-height: 40px;
		}

		.p-2 {
			z-index: 9999;
		}

		.partial {
			position: relative;
			right: 2%;
		}

		.btn {
			position: relative;
			top: 15%;
		}

		.container {
			top: 60px;
		}

		.navbar-toggler {
			float: right;
		}
		
	</style>
</head>
<body>
	<nav class="navbar navbar-expand-lg" id="navbar">
		<div class="container-fluid">
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav me-auto mb-2 mb-lg-0">
					<li class="nav-item px-5">
							<a href="https://localhost:44398">
								<img class="logo" src="~/Content/low-res-logo (3).png" />
							</a>
					</li>
					<li class="nav-item px-4">
						<div class="dropdown">
							<button class="dropbtn">NHẠC CỤ</button>
							<ul class="dropdown-content">
								<li><a href="/Admin/ProductsAdm/GuitarAdm">Guitar</a></li>
								<li><a href="/Admin/ProductsAdm/PianoAdm">Piano</a></li>
								<li><a href="/Admin/ProductsAdm/DrumAdm">Drum</a></li>
								<li><a href="/Admin/ProductsAdm/Index">Tất cả sản phẩm</a></li>
							</ul>
						</div>
					</li>
					<li class="nav-item px-4">
						<div class="dropdown">
							<button class="dropbtn">KHÓA HỌC</button>
							<div class="dropdown-content">
								<a href="/Admin/ProductsAdm/GuitarAdm">Guitar</a>
								<a href="/Admin/ProductsAdm/PianoAdm">Piano</a>
								<a href="/Admin/ProductsAdm/DrumAdm">Drum</a>
								<a href="/Admin/ProductsAdm/Index">Tất cả khóa học</a>
							</div>
						</div>
					</li>
					<li class="nav-item  px-4">
						<div class="dropdown">
							<button class="dropbtn">CHO THUÊ</button>
							<div class="dropdown-content">
								<a href="/Admin/ProductsAdm/GuitarAdm">Nhạc cụ</a>
								<a href="/Admin/ProductsAdm/PianoAdm">Âm thanh</a>
							</div>
						</div>
					</li>
					<li class="nav-item px-4">
						<div class="dropdown">
							<button class="dropbtn">BOOKING</button>
							<div class="dropdown-content">
							</div>
						</div>
					</li>
				</ul>


				@*<form class="d-flex align-items-end " role="search" style="position:relative; ">
							<div class="input-group">
								<input class="form-control" type="text" placeholder="Tìm kiếm" aria-label="Tìm kiếm">
								<button class="btn btn-outline-success" type="button"><i class="fas fa-search"></i></button>
							</div>
						</form>
					</div>
					<div class="partial">@Html.Partial("_LoginPartial")</div>*@
				@using (Html.BeginForm("SearchAdm", "ProductsAdm", FormMethod.Get))
				{
					<div class="d-inline-flex flex-row">
						<div class="p-2"><input class="form-control me-5" type="text" name="searchString" placeholder="Searchhh..." /></div>
						<div class="p-2"><input class="btn btn-outline-success" type="submit" value="Search" /></div>
					</div>
				}
				<div class="partial">@Html.Partial("_LoginPartial")</div>
			</div>
		</div>
	</nav>
	<nav style="position:relative; top:0px; display:block; font-weight:100; height:0; overflow:hidden;" class="navbar navbar-expand-lg">
	</nav>

	<div class="container body-content">

		
		@RenderBody()
		<hr />
		<footer> 
			<p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
		</footer>
	</div>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
</body>
</html>
